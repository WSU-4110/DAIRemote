<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#077063</item>
        <item name="colorPrimaryDark">#016B5F</item>
        <item name="android:statusBarColor">#077063</item>
    </style>

    <style name="KeyboardExtrasStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">true</item>
<!--        <item name="android:onClick">extraToolbarOnClick</item>-->
        <item name="android:clickable">true</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="InteractionShortcutsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="DrawerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/primary</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>